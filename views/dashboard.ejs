<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

    <title>Dashboard - Market place</title>
  </head>
  <body>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand">Navbar</a>
        <form class="d-flex" role="search" id="searchForm">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
          <button class="btn btn-outline-danger" onclick="logout()" type="submit">Logout</button>
      </div>
    </nav>

    <div class="m-4">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
          <button class="btn btn-outline-primary me-2" onclick="goToAddProductPage()" type="submit">add Product</button>
          <li class="page-item disabled">
            <button class="page-link" id="prev-page" onclick="prevPage()">Previous</button>
          </li>
          <li class="page-item active"><button id="pageNo" class="page-link">1</button></li>
          <li class="page-item">
            <button class="page-link" id="next-page" onclick="nextPage()">Next</button>
          </li>
        </ul>
      </nav>
    </div>

    <div class="container text-center">
      <div class="row row-cols-3" id="product-container">
        <div class="col">
          <!-- product card -->
          <div class="card" style="width: 18rem">
            <img src="..." class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">
                Some quick example text to build on the card title and make up
                the bulk of the card's content.
              </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">An item</li>
              <li class="list-group-item">A second item</li>
              <li class="list-group-item">A third item</li>
            </ul>
            <div class="card-body">
              <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a>
            </div>
          </div>
          <!-- till here -->
        </div>
        <div class="col">Column</div>
        <div class="col">Column</div>
        <div class="col">Column</div>
      </div>
    </div>


    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/logout.js"></script>
    <script>
      $("#searchForm").on("submit", (event) => {
        event.preventDefault();
      });

      const nextPage = () => {
        const pageNo = $("#pageNo").text();
        const nextPageNo = parseInt(pageNo) + 1;
        productFiller(nextPageNo);
        
        console.log(nextPageNo);
        if (nextPageNo > 1) {
          $("#prev-page").parent(".page-item").removeClass("disabled");
        }
        $('#pageNo').text(nextPageNo);
      };

      const prevPage = () => {
        const pageNo = $("#pageNo").text();
        const prevPageNo = parseInt(pageNo) - 1;
        productFiller(prevPageNo);
        if  (prevPageNo == 1) {
          $("#prev-page").parent(".page-item").addClass("disabled");
        }
        $("#pageNo").text(prevPageNo);
      };

      const goToAddProductPage = () => {
        window.location.href = "http://localhost:4000/product/add";
      };

      const productFiller = (page = 1, perPage = 9) => {
        $("#product-container").empty();
        $.ajax({
          url: `http://localhost:4000/products?page=${page}&perPage=${perPage}`,
          method: "GET",
          success: (data) => {
            const { products } = data.data;
            products.forEach((product) => {
              console.log(product);
              $("#product-container").append(`
                <div class="col mt-2" id="product-container">
                  <!-- product card -->
                  <div class="card" style="width: 18rem">
                    <img src="${product.image}" class="card-img-top" alt="..." />
                    <div class="card-body">
                      <h5 class="card-title">${product.name}</h5>
                      <p class="card-text">
                        ${product.description}
                      </p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Price: ${product.price}</li>
                      <li class="list-group-item">Provider: ${product.provider}</li>
                    </ul>
                    <div class="card-body">
                      <button class="card-link" onClick=updateProduct('${product.id}')> update </button>
                      <button class="card-link" data-bs-toggle="modal" data-bs-target="#updateProductModal" onClick=deleteProduct('${product.id}')> delete </button>
                    </div>
                  </div>
                  <!-- till here -->
                </div>
              `);
            });
          },
          error: (err) => {
            console.log(err);
            alert(err.responseJSON.message);
          },
        });
      };
      productFiller();
      const updateProduct = (id) => {
        console.log(id);
        window.location.href = `http://localhost:4000/product/${id}/edit`;
      };
      const deleteProduct = () => {
        console.log("delete");
      };
    </script>
  </body>
</html>
